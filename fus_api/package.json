{
	"name": "fus_api",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"deploy": "wrangler deploy",
		"start": "wrangler dev",
		"generate-types": "wrangler types",
		"type-check": "npm run generate-types && tsc --noEmit",
		"lint": "eslint \"src/**/*.ts\" && (grep -r -n '[[:space:]]$' assets/ && echo 'Found trailing whitespace in assets/' && exit 1 || echo 'No trailing whitespace in assets/')",
		"lint:fix": "eslint \"src/**/*.ts\" --fix && sed -i '' 's/[[:space:]]*$//' assets/*.yaml",
		"validate-schema": "redocly lint assets/openapi.yaml"
	},
	"devDependencies": {
		"@redocly/cli": "^1.25.7",
		"@types/node": "^24.1.0",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"eslint": "^9.32.0",
		"typescript": "^5.0.4",
		"wrangler": "^4.26.0"
	},
	"dependencies": {
		"@buff-beacon-project/curby-client": "^1.2.0",
		"itty-router": "^4.0.17",
		"nist-randomness-beacon": "^2.0.4"
	}
}
